      include partials/_nav
      .band.head.hr.relative
        .segment.type.mast
          header
            h1 Selected Work
            include components/menu-btn-flex

      main(role='main')#checkpoint
        ul.menu.reset#contents
          li
            a(href="work-goget.html").plain
              .segment.type.work.gg
                dl.reset.credits
                  dt.project Project
                  dd.project.h3
                    = "GoGet Brand "
                    span.entity.accent.slim /
                    = " App "
                    span.entity.accent.slim /
                    = " Web"
                  dt.client Client
                  dd.client GoGet
                  dt.model Model
                  dd.model Marketplace
                  
