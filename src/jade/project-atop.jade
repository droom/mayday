- var studio      = "Reformist.io"
- var date        = "May 2012"
- var repo        = "https://github.com/droom/atop-mobile"

- var URLTitle    = "givereceipt.com"
- var URLProject     = "http://www.givereceipt.com"
- var URLNext     = "project-givereceipt.html"
- var URLPrev     = "project-foreign.html"

- var prevTitle   = "Foreign Office"
- var nextTitle   = "GiveReceipt Web/App"

- var role        = [ 'Identity', 'UX + UI', 'Front-End' ]
- var stack       = [ 'Adobe© Illustrator', 'Adobe© Photoshop', 'HTML + CSS' ]
- var collab      = [ 'Jessica Tzy']


doctype html
include partials/_html

  head
    include partials/_head

  body.work.iso(data-project="atop")
    div(data-animsition-in-class="fade-in" data-animsition-in-duration="500").js-animsition.animsition#context
      .cover-title
        include partials/_nav
        include partials/_mast
      .cover-photo.atop#checkpoint-nav
      .cover-aside
        include partials/_role

      main(role="main")

        .segment.type
          h3 A campaign site for Taiwanese watch manufacturer ATOP
          p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima eius laborum quasi iusto dolores id porro ea laboriosam cumque inventore ipsam cum iste, a rerum quis esse consequatur, harum labore.

        .segment.relative.center(id="waypoint-atop")
          .atop-live
            .face
            .hand-large
            .hand-small
            .seconds
            .unit
            .day

        .segment.code
          pre.comment.
            // JSON object stores all our needed product values
          pre.
            var productArr = [{
              "title"   :  "VWA—01",
              "colour"  :  "purple",
              "code"    :  "vwa01",
              "hex"     :  "bf5ea1",
              "backing" :  false,
              "url"     :  "http://ideahouse.com.my/product-detail...VWA-01"
              },
              ...
            ];
          pre.comment.
            // We retreive those values on when the watch is clicked
          pre.
            $('a.watch').click(function () {
              var productChoice = $(this).data('id');
              var productHex = productArr[productChoice-1].hex;
              $('.logo').attr('fill', '#'+productHex);
            });


      include partials/_footer
      include partials/_scripts
