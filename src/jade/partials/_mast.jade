.band.head.hr.relative.move
  a(href=URLPrev tabindex="-1" data-animsition-out-class="fade-out-right-sm" data-animsition-out-duration="300").animsition-link.move.move-left

  .segment.type.relative.mast
    header
      h2(itemprop="name")=project
      dl.reset.credits
        if client
          dt Client
          dd(itemprop="copyrightHolder")=client

        if studio
          dt Studio
          dd(itemprop="author")=studio

        if model
          dt Model
          dd=model

        if date
          dt Date
          dd(itemprop="datePublished")=date

        if repo
          dt Repo
          dd=repo

        if status
          dt Status
          dd=status

        if URLProject
          dt Live
          dd
            a(itemprop="URL" href=URLProject aria-label=project)=URLTitle
  
  a(href=URLNext tabindex="-1" data-animsition-out-class="fade-out-left-sm" data-animsition-out-duration="300").animsition-link.move.move-right