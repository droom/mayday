                span.accent.slim &#124;&#124;
                = " Berlin"
                &nbsp;
                span.accent.slim &#124;&#124;
                &nbsp;
                = "KL"

      .jacket
      
      .segment.type
        include partials/_feed
        
    include partials/_page
    include partials/_top
    include partials/_footer
      
  include partials/_scripts